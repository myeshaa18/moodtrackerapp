<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_background_light"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvMoodEmoji"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="ðŸ˜”"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/circle_background"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anonymous User"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 hours ago"
                android:textSize="12sp"
                android:textColor="@color/text_light" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvMoodText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mood text will appear here"
        android:textSize="15sp"
        android:textColor="@color/text_primary"
        android:lineSpacingExtra="2dp"
        android:layout_marginBottom="12dp" />

    <!-- Admin Response -->
    <LinearLayout
        android:id="@+id/layoutAdminResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_background_admin"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_admin"
            app:tint="@color/primary_blue"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MoodTracker Support"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvAdminResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin response will appear here"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>